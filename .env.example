# StubHub Scraper Environment Configuration
# ==========================================
# Copy this file to .env and modify the values as needed

# Performance Settings
# --------------------
# Number of concurrent cities to scrape (1-20 recommended)
CONCURRENT_CITIES=5

# Number of concurrent venue maps to fetch (1-50 recommended)  
CONCURRENT_VENUES=10

# Delay between requests in seconds (0.5-2.0 recommended)
WAIT_SECONDS=1.0

# Rate limiting settings
RESPECT_RATE_LIMITS=true
RATE_LIMIT_DELAY=1.0

# Retry Settings
# --------------
# Maximum number of retry attempts for failed requests
MAX_RETRIES=3

# Initial delay between retries in seconds (exponential backoff)
RETRY_DELAY=2.0

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Logging Settings
# ---------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file names (will be created automatically)
SCRAPER_LOG_FILE=scraper.log
VENUE_FETCHER_LOG_FILE=venue_fetcher.log

# Advanced Settings
# -----------------
# Enable debug mode for verbose logging
DEBUG_MODE=false

# Skip SSL verification (not recommended for production)
SKIP_SSL_VERIFY=false

# Custom user agent string (optional)
# USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Proxy settings (optional)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080